<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="sale_order_tree_view">
			<field name="name">sale.order.tree</field>
			<field name="model">sale.order</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Sales Order">
					<field name='name'/>
					<field name='origin'/>
					<field name='client_order_ref'/>
					<field name='date_order'/>
					<field name='create_date'/>
					<field name='date_confirm'/>
					<field name='user_id'/>
					<field name='product_id'/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="sale_order_form_view"> 
		    <field name="name">sale.order.form</field>
		    <field name="model">sale.order</field>
		    <field name="type">form</field>
		    <field name="arch" type="xml">
				<form string="Sales Order" version="8.0">
					<sheet>
						<group>
							<field name='name'/>
							<field name='origin'/>
							<field name='client_order_ref'/>
							<field name='date_order'/>
							<field name='create_date'/>
							<field name='date_confirm'/>
							<field name='user_id'/>
							<field name='product_id'/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_sale_form">
			<field name="name">Sales Order</field>
			<field name="res_model">sale.order</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
  				<p class="oe_view_nocontent_create">
    				Click to create new Sales Order...
  				</p>
   			</field>
		</record>
		<!-- Top menu -->
		<menuitem name="CarVue" id="carvue"/>

		<!-- sub menu -->
		<menuitem name="Sale" id="sale_menu" parent="carvue"/>

		<!-- menu item -->
		<menuitem name='Purchases' id='purchases' parent='sale_menu' action='action_sale_form'/>
	</data>
</openerp>